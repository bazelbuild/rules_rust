load("@rules_rust//rust:defs.bzl", "rust_benchmark", "rust_test")

package(default_visibility = ["//visibility:public"])

# The benchmark rule requires a nightly toolchain but is otherwise
# expected to work just as the `criterion` variant. For now, we tag
# this as manual as the examples do not use a nightly toolchain.
rust_benchmark(
    name = "bench",
    srcs = ["benches/fibonacci.rs"],
    edition = "2018",
    tags = ["manual"],
    use_libtest_harness = True,
)

rust_test(
    name = "bench_test",
    srcs = ["//test/bench/private:test_bench_runner.rs"],
    data = [":bench"],
    rustc_env = {
        "BENCH_FILES": "$(rootpaths :bench)",
    },
    tags = ["manual"],
    use_libtest_harness = False,
)
