load("@rules_rust//rust:defs.bzl", "rust_binary", "rust_library", "rust_test")

rust_library(
    name = "mylib",
    srcs = ["lib.rs"],
    edition = "2021",
)

rust_binary(
    name = "main_binary",
    srcs = ["main.rs"],
    edition = "2021",
    deps = [":mylib"],
)

rust_test(
    name = "mylib_test",
    crate = ":mylib",
)

rust_test(
    name = "test",
    srcs = ["test.rs"],
    edition = "2021",
    deps = [":mylib"],
)
