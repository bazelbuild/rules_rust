# https://github.com/bazelbuild/rules_foreign_cc/tree/0.8.0/examples/third_party/openssl

load("@bazel_skylib//rules:select_file.bzl", "select_file")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

select_file(
    name = "nasm",
    srcs = ":all_srcs",
    subpath = "nasm.exe",
)
