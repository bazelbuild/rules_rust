load(
    "//rust:defs.bzl",
    "rust_doc",
    "rust_library",
    "rust_test",
)

rust_library(
    name = "runfiles",
    srcs = ["runfiles.rs"],
    edition = "2018",
    rustc_flags = ["-Dunused-qualifications"],
    visibility = ["//visibility:public"],
)

rust_test(
    name = "runfiles_test",
    crate = ":runfiles",
    data = ["data/sample.txt"],
    rustc_flags = ["-Dunused-qualifications"],
)

rust_doc(
    name = "runfiles_doc",
    crate = ":runfiles",
)
