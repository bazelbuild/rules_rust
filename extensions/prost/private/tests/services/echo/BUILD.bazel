load("@rules_proto//proto:defs.bzl", "proto_library")
load("@rules_rust//rust:defs.bzl", "rust_binary")
load("//prost:defs.bzl", "rust_prost_library")

package(default_visibility = ["//prost/private/tests:__subpackages__"])

proto_library(
    name = "echo_proto",
    srcs = [
        "echo.proto",
    ],
)

rust_prost_library(
    name = "echo_rs_proto",
    proto = ":echo_proto",
)

rust_binary(
    name = "client",
    srcs = ["client.rs"],
    edition = "2021",
    deps = [
        ":echo_rs_proto",
        "//prost/private/3rdparty/crates:h2",
        "//prost/private/3rdparty/crates:prost",
        "//prost/private/3rdparty/crates:tokio",
        "//prost/private/3rdparty/crates:tokio-stream",
        "//prost/private/3rdparty/crates:tonic",
    ],
)

rust_binary(
    name = "server",
    srcs = ["server.rs"],
    edition = "2021",
    deps = [
        ":echo_rs_proto",
        "//prost/private/3rdparty/crates:h2",
        "//prost/private/3rdparty/crates:prost",
        "//prost/private/3rdparty/crates:tokio",
        "//prost/private/3rdparty/crates:tokio-stream",
        "//prost/private/3rdparty/crates:tonic",
    ],
)
